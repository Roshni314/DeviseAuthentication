<h1>Students</h1>


<%= search_form_for @search, remote: true do |f| %>
    <%= f.label :email_cont, 'Email' %>
    <%= f.search_field :email_cont %>
    <%= f.submit %>
  <% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<hr />
<%= paginate @users %>
<%= page_entries_info @users %>