<h1>Students</h1>

<%= search_form_for @search, remote: true do |f| %>
  <%= f.condition_fields do |c| %>
    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>
    <%= c.predicate_select %>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <% end %>
  <% end %>
  <%= f.submit "Search" %><br>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<hr />
<%= paginate @users %>
<%= page_entries_info @users %>